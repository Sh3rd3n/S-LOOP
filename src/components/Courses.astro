---
import TextParagraph from "./TextParagraph.astro";
import CardsCarousel from "./CardsCarousel.astro";
let spanCount = 14;

let { header, description, cards } = Astro.props;
---

<section id="courses">
    <div class="overflow-hidden h-24 md:h-32 mt-4 md:mt-10 flex flex-row justify-evenly gap-6">
        {Array.from({length: spanCount}, (_, i) => (
                <span class={`rotate-30 w-4 md:w-6 h-full bg-teal bg-opacity-60 -z-10 ${i >= 7 ? 'hidden md:inline' : ''}`}></span>
        ))}
    </div>

    <h2 class="w-full -mt-12 px-10 xl:px-72 font-stencil font-normal text-7xl text-center">{header}</h2>

    <div class="px-10 xl:px-72 my-4">
        <TextParagraph content={description} />
    </div>

    <CardsCarousel cards={cards} />

    <div class="w-full h-80 overflow-y-hide bg-cover bg-fixed bg-center bg-no-repeat shadow-lg bg-[url('/kite-lesson-mobile.webp')] md:bg-[url('/kite-lesson.webp')]"></div>
</section>