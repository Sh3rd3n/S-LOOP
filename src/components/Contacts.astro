---
let {header, address} = Astro.props;
---

<section id="contacts">
    <div class="px-10 xl:px-72 py-4 lg:py-10 header flex flex-col lg:flex-row justify-center items-center">
        <div class="size-full -z-10 -mb-8 lg:mb-0 lg:mr-8 flex flex-row items-center lg:justify-end">
            {
                Array.from({length: 3}).map((_, i) => {
                    const colorFade = i === 0 ? 'opacity-[.60]' : i === 1 ? 'opacity-[.40]' : i === 2 ? 'opacity-[.30]' : '';

                    return (
                            <svg class={`size-20 lg:size-12 ${colorFade}`} fill="#0BFCE1"
                                 viewBox="4 4 12 12"
                                 xmlns="http://www.w3.org/2000/svg" stroke="#0BFCE1">
                                <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
                                <g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g>
                                <g id="SVGRepo_iconCarrier">
                                    <path d="M15 10l-9 5V5l9 5z"></path>
                                </g>
                            </svg>
                    )
                })
            }
        </div>

        <h2 class="font-stencil font-normal text-6xl md:text-7xl w-full text-center">{header}</h2>

        <div class="size-full -z-10 -mt-8 lg:mt-0 lg:ml-8 flex flex-row items-center justify-end lg:justify-start">
            {
                Array.from({length: 3}).map((_, i) => {
                    const colorFade = i === 0 ? 'opacity-[.30]' : i === 1 ? 'opacity-[.40]' : i === 2 ? 'opacity-[.60]' : '';

                    return (
                            <svg class={`size-20 lg:size-12 ${colorFade}`} fill="#0BFCE1" viewBox="4 4 12 12"
                                 xmlns="http://www.w3.org/2000/svg" stroke="#0BFCE1">
                                <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
                                <g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g>
                                <g id="SVGRepo_iconCarrier">
                                    <path d="M14 5v10l-9-5 9-5z"></path>
                                </g>
                            </svg>
                    )
                })
            }
        </div>
    </div>

    <div class="lg:px-10 xl:px-72 flex flex-col lg:flex-row justify-between gap-6">
        <iframe class="lg:w-[60%] aspect-video lg:aspect-square"
                src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d2132.2789176144856!2d9.57170480905316!3d40.90483063476812!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x12d9355133e5bf49%3A0xa5538f36f7a01ed!2sS-LOOP%20Kiteboarding%20School%20-%20Olbia%20Sardegna!5e0!3m2!1sit!2sit!4v1717339065622!5m2!1sit!2sit"
                allowfullscreen="" loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"
                title="Google Maps Location of S-LOOP Kiteboarding School"></iframe>
        <div class="lg:w-[40%] flex flex-col">
            <div class="p-6 bg-teal bg-opacity-40 flex flex-col justify-center items-center">
                <p class="font-jost font-medium text-lg lg:text-xl my-6"><strong>S-LOOP Kiteboarding School</strong></p>

                <svg class="h-8 w-8 text-black" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <p class="text-center font-jost font-light text-lg lg:text-xl">Via Isola Padron Fiaso, 07026 Olbia (SS)</p>
                <p class="text-center font-jost font-light text-lg lg:text-xl mb-6">{address}</p>

                <svg class="h-8 w-8 text-black" width="24" height="24" viewBox="0 0 24 24" stroke-width="2"
                     stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z"/>
                    <path d="M5 4h4l2 5l-2.5 1.5a11 11 0 0 0 5 5l1.5 -2.5l5 2v4a2 2 0 0 1 -2 2a16 16 0 0 1 -15 -15a2 2 0 0 1 2 -2"/>
                </svg>
                <p class="font-jost font-light text-lg lg:text-xl mb-6">+39 351 834 2421</p>

                <svg class="h-8 w-8 text-black" width="24" height="24" viewBox="0 0 24 24" stroke-width="2"
                     stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z"/>
                    <rect x="3" y="5" width="18" height="14" rx="2"/>
                    <polyline points="3 7 12 13 21 7"/>
                </svg>
                <p class="font-jost font-light text-lg lg:text-xl mb-6">info@s-loop.it</p>
            </div>

            <div class="h-full mt-6 flex flex-row justify-center items-center gap-12 lg:bg-teal lg:bg-opacity-20">
                <a href="https://www.instagram.com/s.loop.kiteschool/" class="size-10 lg:size-12" aria-label="Instagram S-LOOP Kiteschool">
                    <svg class="text-black" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                         stroke-width="2"
                         stroke-linecap="round" stroke-linejoin="round">
                        <rect x="2" y="2" width="20" height="20" rx="5" ry="5"/>
                        <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
                        <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/>
                    </svg>
                </a>

                <a href="https://www.facebook.com/sl.kiteschool" class="size-10 lg:size-12" aria-label="Facebook S-LOOP Kiteschool">
                    <svg class="text-black" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                         stroke-width="2"
                         stroke-linecap="round" stroke-linejoin="round">
                        <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/>
                    </svg>
                </a>

                <a href="https://wa.me/c/393518342421" class="size-10 lg:size-12" aria-label="WhatsApp S-LOOP Kiteschool">
                    <svg fill="#000000" viewBox="0 0 24 24">
                        <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
                        <g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g>
                        <path fill-rule="evenodd" clip-rule="evenodd"
                              d="M20.5,3.5C18.25,1.25,15.2,0,12,0C5.41,0,0,5.41,0,12c0,2.11,0.65,4.11,1.7,5.92 L0,24l6.33-1.55C8.08,23.41,10,24,12,24c6.59,0,12-5.41,12-12C24,8.81,22.76,5.76,20.5,3.5z M12,22c-1.78,0-3.48-0.59-5.01-1.49 l-0.36-0.22l-3.76,0.99l1-3.67l-0.24-0.38C2.64,15.65,2,13.88,2,12C2,6.52,6.52,2,12,2c2.65,0,5.2,1.05,7.08,2.93S22,9.35,22,12 C22,17.48,17.47,22,12,22z M17.5,14.45c-0.3-0.15-1.77-0.87-2.04-0.97c-0.27-0.1-0.47-0.15-0.67,0.15 c-0.2,0.3-0.77,0.97-0.95,1.17c-0.17,0.2-0.35,0.22-0.65,0.07c-0.3-0.15-1.26-0.46-2.4-1.48c-0.89-0.79-1.49-1.77-1.66-2.07 c-0.17-0.3-0.02-0.46,0.13-0.61c0.13-0.13,0.3-0.35,0.45-0.52s0.2-0.3,0.3-0.5c0.1-0.2,0.05-0.37-0.02-0.52 C9.91,9.02,9.31,7.55,9.06,6.95c-0.24-0.58-0.49-0.5-0.67-0.51C8.22,6.43,8.02,6.43,7.82,6.43S7.3,6.51,7.02,6.8 C6.75,7.1,5.98,7.83,5.98,9.3c0,1.47,1.07,2.89,1.22,3.09c0.15,0.2,2.11,3.22,5.1,4.51c0.71,0.31,1.27,0.49,1.7,0.63 c0.72,0.23,1.37,0.2,1.88,0.12c0.57-0.09,1.77-0.72,2.02-1.42c0.25-0.7,0.25-1.3,0.17-1.42C18,14.68,17.8,14.6,17.5,14.45z">
                        </path>
                    </svg>
                </a>
            </div>
        </div>
    </div>
</section>

