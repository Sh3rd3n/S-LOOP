         aria-modal="true">
        <div class="fixed inset-0 backdrop-blur-lg bg-gray-500 bg-opacity-75">
            <div class="z-50 size-full inset-0 flex justify-center items-center overflow-y-auto">
                <svg class="fixed right-5 top-5 size-10 hover:cursor-pointer" fill="none" viewBox="0 0 24 24"
                     stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                </svg>

                <img id="modal-img" class="object-scale-down object-center max-h-screen p-16" src=""
                     alt="Modal Caption">
            </div>
        </div>
    </div>
</section>

<script>
    const gallery = document.getElementById('moments') as HTMLElement;
    const images = gallery.querySelectorAll('img');
    const modal = document.getElementById('gallery-modal') as HTMLElement;
    const close = modal.querySelector('svg') as SVGElement;
    const body = document.body;

    close.addEventListener('click', () => {
        body.classList.remove('overflow-hidden'); // Enable scrolling
        modal.classList.add('hidden');
    });

    images.forEach((image: HTMLImageElement) => {
        image.addEventListener('click', () => {
            // Get the image element of modal
            let modalImg = document.getElementById('modal-img') as HTMLImageElement;
            // Assign the source of the clicked image to the modal image
            modalImg.src = image.src;

            // Make modal visible and disable body scrolling
            modal.classList.remove('hidden');
            body.classList.add('overflow-hidden');
        });
    });
</script>